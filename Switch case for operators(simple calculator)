#include<stdio.h>
int main()
{
     int a,b;
     char c;
     printf("Enter the value with the operators in the middle");
     scanf("%d%c%d",&a,&c,&b);
     switch(c)
     {
     	 case'+':
     	 printf("The sum is %d",a+b);
     	 break;
	 case'-':
	 printf("The difference is %d",a-b);
	 break;
	 case'*':
	 printf("The product is %d",a*b);
	 break;
	 case'/':
	 printf("The division is %d",a/b);
	 break;     	
     }
     return 0;
}
